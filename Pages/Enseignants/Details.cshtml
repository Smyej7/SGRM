@page
@model SGRM.Pages.Enseignants.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enseignant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnseignantVM.Enseignant.EnseignantId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnseignantVM.Enseignant.EnseignantId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnseignantVM.Enseignant.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnseignantVM.Enseignant.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnseignantVM.Enseignant.DepartementId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnseignantVM.Enseignant.DepartementId)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.EnseignantVM.Enseignant.EnseignantId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<div>
    <h4>Laboratoires</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EnseignantVM.AttachedLaboratoires[0].Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EnseignantVM.AttachedLaboratoires)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-page="../Laboratoires/Edit" asp-route-id="@item.LaboratoireId">Edit</a> |
                        <a asp-page="../Laboratoires/Details" asp-route-id="@item.LaboratoireId">Details</a> |
                        <a asp-page="../Laboratoires/Delete" asp-route-id="@item.LaboratoireId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>